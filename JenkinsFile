pipeline {
    agent any

    tools {
        maven "M3"
        jdk 'JDK19'
    }

    parameters {
        choice(choices: ['regressionTests.xml', 'smokeTests.xml'], description: 'Select a suite name', name: 'SUITE_NAME')
        gitParameter branchFilter: 'origin/(.*)', defaultValue: 'feature5', name: 'BRANCH', type: 'PT_BRANCH'
    }

    stages {
        stage('Run Selenium Tests') {
            steps {
                git branch: "${params.BRANCH}", url: 'https://github.com/ChernikaVi/QA24_QaseProject_Zlobich_Kovnat'
                sh "mvn -Dmaven.test.failure.ignore=true -DsuiteXmlFile=${params.SUITE_NAME} clean test"

            }
        }
        stage('Publish Allure report') {
            steps {
                script {
                    allure([
                         includeProperties: false,
                         jdk: '',
                         properties: [],
                         reportBuildPolicy: 'ALWAYS',
                         results: [[path: 'target/allure-results']]
                    ])
                }
            }
        }
    }
}